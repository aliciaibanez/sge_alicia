<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="taller_cliente">
      <field name="name">Cliente</field>
      <field name="model">taller.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="telefono" />
          <field name="email" />
          <field name="direccion" />
          <field name="vehiculo_ids" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="taller.action_taller_cliente">
      <field name="name">Cliente</field>
      <field name="res_model">taller.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>


  </data>
</odoo>