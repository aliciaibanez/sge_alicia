<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_libros_tree">
      <field name="name">library_aie.libros.tree</field>
      <field name="model">library_aie.libros</field>
      <field name="arch" type="xml">
        <tree>
          <field name="titulo"/>
          <field name="autor_ids"/>
          <field name="genero_id"/>
          <field name="socios_ids"/>
        </tree>
      </field>
    </record>

        <!-- Form View (Vista Formulario)-->
    <record model="ir.ui.view" id="view_libros_form">
    <field name="name">library_aie.libros.form</field>
    <field name="model">library_aie.libros</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                  <field name="titulo"/>
                  <field name="autor_ids"/>
                  <field name="genero_id"/>
                  <field name="socios_ids"/>
                </group>
            </sheet>
        </form>
    </field>
</record>


    <!-- actions opening views on models -->

<record model="ir.actions.act_window" id="action_libros">
    <field name="name">Libros</field>
    <field name="res_model">library_aie.libros</field>
    <field name="view_mode">tree,form</field>
</record>
  </data>
</odoo>